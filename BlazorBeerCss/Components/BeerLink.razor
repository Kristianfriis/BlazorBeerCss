@using BlazorBeerCss.Helpers;
<a href="@Href" class="">
    @if (!string.IsNullOrEmpty(Icon.ToString()))
    {
        <i>@Icon.ToString()</i>
    }
    <div>@Title</div>
</a>

@code {
    [Parameter] public string Href { get; set; } = "";
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public Icon Icon { get; set; } = new Icon("");
}
