@using BlazorBeerCss.Extensions;
@using BlazorBeerCss.Helpers;
<label class="radio icon">
    <input type="radio" name="@Name" disabled="@Disabled" checked="@Value">
    <span>
        <i>@FirstIcon</i>
        <i>@SecondIcon</i>
    </span>
</label>

@code {
    [Parameter] public string? Name { get; set; }
    [Parameter] public Icon? FirstIcon { get; set; }
    [Parameter] public Icon? SecondIcon { get; set; }
    [Parameter] public bool Disabled { get; set; }

    [Parameter]
    public EventCallback<bool> ValueChanged { get; set; }

    private bool _value;
    [Parameter]
    public bool Value
    {
        get { return _value; }
        set
        {
            if (_value != value)
            {
                _value = value;
                ValueChanged.InvokeAsync(_value);
            }
        }
    }
}
