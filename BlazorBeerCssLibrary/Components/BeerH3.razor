@using BlazorBeerCss.Helpers;
@using BlazorBeerCss.Extensions;
<h3 class="@Text.GetEnumDescription() @Size.GetEnumDescription()">
    @ChildContent
</h3>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public BeerTexts Text { get; set; } = BeerTexts.Default;
    [Parameter] public BeerSizes Size { get; set; } = BeerSizes.Default;
}
