<BeerH5>Radios</BeerH5>
<BeerSpace Space="BeerSpaces.SmallSpace"></BeerSpace>

<BeerH6>Default</BeerH6>
<BeerRow>
    <BeerRadioGroup Name="RadioTest" T="string" @bind-Value="defaultChoice">
        <BeerRadio T="string" Value="@("default")"></BeerRadio>
        <BeerRadio T="string" Value="@("default1")">Enabled</BeerRadio>
        <BeerRadio T="string" Value="@("default2")" Disabled="true">Disabled</BeerRadio>
        <BeerRadio T="string" Value="@("default3")" Disabled="true">Disabled</BeerRadio>
    </BeerRadioGroup>
</BeerRow>
<BeerSpace Space="BeerSpaces.SmallSpace"></BeerSpace>
<BeerH6>Radio with icons</BeerH6>
<BeerRow>
    <BeerRadioGroup Name="RadioTestIcon" T="string" @bind-Value="defaultChoiceIcon">
        <BeerRadio Value="@("withIcon")" Icons="new(BeerIcons.Icondone, BeerIcons.Iconclose)"></BeerRadio>
        <BeerRadio Value="@("withIcon1")" ImageSources="@new("favicon.png", "beer-and-woman.jpg")"></BeerRadio>
    </BeerRadioGroup>
</BeerRow>
<BeerSpace Space="BeerSpaces.SmallSpace"></BeerSpace>

<BeerH6>Radio in field elements</BeerH6>
<BeerRow Space="BeerSpaces.LargeSpace" Size="BeerSizes.Wrap">
    <BeerField Alignement="BeerAlignments.MiddleAlign">
        <BeerNav>
            <BeerRadioGroup Name="RadioTestField1" T="string">
                <BeerRadio Value="@("RadioTestField11")">Item 1</BeerRadio>
                <BeerRadio Value="@("RadioTestField12")">Item 2</BeerRadio>
                <BeerRadio Value="@("RadioTestField13")">Item 3</BeerRadio>
            </BeerRadioGroup>
        </BeerNav>
    </BeerField>
    <BeerField Alignement="BeerAlignments.MiddleAlign" HelperText="Helper Text">
        <BeerNav>
            <BeerRadioGroup Name="RadioTestField2" T="string">
                <BeerRadio Value="@("RadioTestField21")">Item 1</BeerRadio>
                <BeerRadio Value="@("RadioTestField22")">Item 2</BeerRadio>
                <BeerRadio Value="@("RadioTestField23")">Item 3</BeerRadio>
            </BeerRadioGroup>
        </BeerNav>
    </BeerField>
    <BeerField Alignement="BeerAlignments.MiddleAlign" ErrorText="Error Text Disabled">
        <BeerNav>
            <BeerRadioGroup Name="RadioTestField3" T="string">
                <BeerRadio Value="@("RadioTestField31")">Item 1</BeerRadio>
                <BeerRadio Value="@("RadioTestField32")">Item 2</BeerRadio>
                <BeerRadio Value="@("RadioTestField33")">Item 3</BeerRadio>
            </BeerRadioGroup>
        </BeerNav>
    </BeerField>
</BeerRow>

@code {
    string valueTest = "1";
    string defaultChoice = "default3";
    string defaultChoiceIcon = "withIcon";

}
