@using BlazorBeerCss.Extensions;
<BeerH4>Tooltips</BeerH4>

<BeerSpace Space="BeerSpaces.Space"></BeerSpace>
<BeerRow>
    <BeerRadioGroup Name="spacing" T="string" @bind-Value="@spaceString">
        <BeerRadio T="string" Value="BeerSpaces.NoSpace.GetEnumDescription()">@BeerSpaces.NoSpace.GetEnumDescription()</BeerRadio>
        <BeerRadio T="string" Value="BeerSpaces.Default.GetEnumDescription()">@BeerSpaces.SmallSpace.GetEnumDescription()</BeerRadio>
        <BeerRadio T="string" Value="BeerSpaces.MediumSpace.GetEnumDescription()">@BeerSpaces.MediumSpace.GetEnumDescription()</BeerRadio>
        <BeerRadio T="string" Value="BeerSpaces.LargeSpace.GetEnumDescription()">@BeerSpaces.LargeSpace.GetEnumDescription()</BeerRadio>
    </BeerRadioGroup>
</BeerRow>
<BeerRow>
    <BeerButton>
        <BeerTooltip></BeerTooltip>
    </BeerButton>
</BeerRow>

@code {
    BeerSpaces spacing = BeerSpaces.Default;
    string spaceString = BeerSpaces.SmallSpace.GetEnumDescription();
}
